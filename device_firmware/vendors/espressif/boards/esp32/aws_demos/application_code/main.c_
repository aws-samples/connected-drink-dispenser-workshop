/**
 * @brief Application runtime entry point.
 */
int app_main( void )
{
    /* Perform any hardware initialization that does not require the RTOS to be
     * running.  */
    prvMiscInitialization();
    	/* Create tasks that are not dependent on the WiFi being initialized. */
    initPeripheral();
    xLoggingTaskInitialize( mainLOGGING_TASK_STACK_SIZE,
							tskIDLE_PRIORITY + 5,
							mainLOGGING_MESSAGE_QUEUE_LENGTH );
    esp_task_wdt_init(mainWATCHDOG_PERIOD + 2, false);
    xTaskCreatePinnedToCore(prvWatchDogReset, "reset task", 1024, NULL, tskIDLE_PRIORITY + 8, &xWatchDogHandle, 0);
    FreeRTOS_IPInit( ucIPAddress,
            ucNetMask,
            ucGatewayAddress,
            ucDNSServerAddress,
            ucMACAddress );

    if( SYSTEM_Init() == pdPASS )
    {
        vDevModeKeyProvisioning();
        /* Connect to the wifi before running the demos */
        prvWifiConnect();
    }

    /* Start the scheduler.  Initialization that requires the OS to be running,
     * including the WiFi initialization, is performed in the RTOS daemon task
     * startup hook. */
    // Following is taken care by initialization code in ESP IDF
    // vTaskStartScheduler();

    return 0;
}

