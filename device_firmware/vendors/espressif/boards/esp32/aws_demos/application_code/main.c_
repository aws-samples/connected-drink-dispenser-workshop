static void prvWatchDogReset(void *param ){
    if (esp_task_wdt_add(NULL) != ESP_OK){
        printf ("Error setting watchdog\n");
        abort();
    }
    if (esp_task_wdt_status(NULL) != ESP_OK){
        printf ("Error getting watchdog status\n");
        abort();
    }

    while (1){
        // Test if we did not connected after a timout since start
        // Workaround for situation when a WIFI Connect function doesn't exit on timeot
        if ((!onceConnected) && (xTaskGetTickCount() > mainNOT_CONNECTED_RESET_AFTER_TICKS))
            esp_restart();
        if (!onceConnected || WIFI_IsConnected() == pdTRUE) {
            esp_task_wdt_reset();
        } else {
            printf("Disconnect\n");
            esp_restart();
        }
        printf ("Watchdog reset\n");
        vTaskDelay(pdMS_TO_TICKS(mainWATCHDOG_PERIOD * 1000));
    }
}

